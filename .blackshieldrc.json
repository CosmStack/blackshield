{
  "envValidation": {
    "allowedPublicVars": ["NEXT_PUBLIC_APP_URL", "NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_VERCEL_URL"]
  },
  "xssProtection": {
    "autoSanitize": true,
    "customRules": {
      "removeScripts": "function(input) { return input.replace(/<script[^>]*>.*?<\\/script>/gi, ''); }"
    }
  },
  "boundaryProtection": {
    "validateServerProps": true
  }
}
